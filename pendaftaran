    <script>
        function showPaymentPage(event) {
            event.preventDefault(); 
            document.getElementById('registerPage').classList.add('hidden');
            document.getElementById('paymentPage').classList.remove('hidden');
        }
        
        function showConfirmationPage() {
            document.getElementById('paymentPage').classList.add('hidden');
            document.getElementById('confirmationPage').classList.remove('hidden');
            setTimeout(() => {
                alert("pendaftaran Anda sebagai kreator CV.HIJAU MAKMUR TEXTILE sedang di diproses");
            }, 10000); // Simulasi verifikasi dalam 1 MENIT
        }
